<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".detailsPage.ReviewsPageActivity"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activityReviewStarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/activitydetailsReviewStar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/activityReviewStarText"
                android:src="@drawable/ic_rating_star" />

            <TextView
                android:id="@+id/activityReviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activitydetailsReviewStar"
                android:layout_marginTop="10dp"
                android:textColor="@color/details_page_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activityReviewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activityReviewTitle"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingBottom="20dp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>