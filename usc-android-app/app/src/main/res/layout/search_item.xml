<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/gradient">

        <ImageView
            android:id="@+id/search_item_backdrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Title"
            android:textColor="@color/white"
            android:id="@+id/search_item_title"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/search_item_media_type"
            android:text="Movie"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="5"
            android:shadowRadius="1"
            />

        <TextView
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/search_item_media_type"
            android:id="@+id/search_item_release_date"
            android:text="(0000)"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="5"
            android:shadowRadius="1"
            />

        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/search_item_rating_value"
            android:text="0.0"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="5"
            android:shadowRadius="1"
            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/search_item_rating_value"
            android:id="@+id/search_item_rating_star"
            android:src="@drawable/ic_rating_star"
            android:textColor="@color/white"
            android:paddingRight="5dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>